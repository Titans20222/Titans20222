    <center><h1>Les Reclamations</h1></center>

    <table class="table">
        <thead>


            <tr>
                <input id="myInput" type="text" placeholder="Rechercher..">
                <!--  <th>Id</th>   -->
                <th>Titre</th>
                <th>Description</th>
                <th>Date</th>
                <th>Type</th>
