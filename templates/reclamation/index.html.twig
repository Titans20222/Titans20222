        <br>
        <br>
        <tr>

                <!-- <td>{{ reclamation.id }}</td>  -->
                <td>{{ reclamation.titre }}</td>
                <td>{{ reclamation.description }}</td>
                <td>{{ reclamation.date ? reclamation.date|date('d-m-Y') : '' }}</td>
                <td>{{ reclamation.type }}</td>
                <td>
                    <a href="{{ path('reclamation_show', {'id': reclamation.id}) }}"class="btn btn-primary p-3 px-xl-4 py-xl-3">show</a>
                    <a href="{{ path('reclamation_edit', {'id': reclamation.id}) }}"class="btn btn-primary p-3 px-xl-4 py-xl-3">edit</a>
                    {{ include('reclamation/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}


<nav aria-label="Page navigation example">
