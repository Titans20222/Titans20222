{% block css %}
{% endblock %}
{% block content %}

    {% block body %}
<div class="container-xl">
        {% block title %}New Produit{% endblock %}
</div>
        <div class="container-fluid">

        <div class="container-xl">


            {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
