{% extends 'adminT.html.twig' %}

{% block title %}Produit{% endblock %}
{% block content %}
{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ produit.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ produit.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
             <tr>
                <th>File</th>
                <td><img class="img-responsive" src="{{ asset('uploads/peintures/') ~ produit.file}}" width="200" height="200"></td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ produit.createdAt|date('d-m-Y H:i:s') }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ produit.UpdatedAt|date('d-m-Y H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('produit_index') }}">back to list</a>

    <a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
{% endblock %}